@import "../../extends/media.styl"

.fix-container-me
  margin-top: 60px
  @extends @media({$mdAndUp})
    max-width: 100%
    padding-bottom: 30px
  .fix-container-header
    @extends @media({$smAndDown})
      display: flex
      flex-direction: column-reverse
      align-items: center
      justify-items: center
    .conatiner__image
      width: 300px
      height: 300px
      background: #fff
      border-radius: 50%
      overflow: hidden
      display: flex
      align-items: center
      justify-content: center
      